extends admin_layout
block content
	.content
		.row
			.col-12
				.card
					.card-header
						h4.card-title 경기장 관리
					.card-body
						.row
							if(list.length > 0)
								each ground in list
									.col-md-4
										h5 #{ground.name}
							else
								.col-12
									p 등록된 경기장이 없습니다.
					.card-footer
						button.btn.btn-primary(type='button', data-toggle='modal', data-target='#groundModal') 경기장 등록
	#groundModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='groundModalLabel', aria-hidden='true')
		.modal-dialog.modal-lg(role='document')
			.modal-content
				.modal-header
					h5.modal-title#groundModalLabel 경기장 등록
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') &times;
				.modal-body
					form(name='groundForm', onsubmit='fnCreateGround(); return false;')
						.form-group
							.row
								.col-md-4
									label(for='groundName') 경기장명
									input.form-control#groundName(type='text', placeholder='경기장명 입력')
								.col-md-8
									label(for='groundPrice') 경기장 주소
									input.form-control#groundPrice(type='text', placeholder='경기장 주소 입력')
								.col-12
									label 경기장 위치 선택
									#map(style='width:500px; height:300px;')
				.modal-footer
					button.btn.btn-secondary(type='button', data-dismiss='modal') Close
					button.btn.btn-primary(type='button') 등록
	block append_js
		script(type="text/javascript", src="//dapi.kakao.com/v2/maps/sdk.js?appkey=ee6aab4f30e6e8aae53bc54a7dc08c28")
		script.
			var container = document.getElementById('map'); //지도를 담을 영역의 DOM 레퍼런스
			var options = { //지도를 생성할 때 필요한 기본 옵션
				center: new kakao.maps.LatLng(33.450701, 126.570667), //지도의 중심좌표.
				level: 3 //지도의 레벨(확대, 축소 정도)
			};

			var map = new kakao.maps.Map(container, options); //지도 생성 및 객체 리턴
