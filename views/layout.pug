      #content.container-fluid.pz_bg
        .container
          nav.navbar.navbar-expand-lg.navbar-light.bg-white.top_bar
            img.position-fixed(src='/images/pz_logo.png', style='top:20px; cursor:pointer; z-index:10', onclick='location.href="/"')
            #navbarSupportedContent.collapse.navbar-collapse
              ul.navbar-nav.ml-auto
                if(user_info)
                  li.nav-item 
                    p.nav-link.nav-font.text-secondary.m-0 
                      u 
                        a.text-primary(href='/users/mypage') #{user_info.user.user_nickname} 
                      | 님 반갑습니다.
                  li.nav-item.my-3(style='background:url(/images/vertical_bar.svg); width:5px;')
                  li.nav-item
                    a.nav-link.nav-font(href='/users/logout') LOGOUT
                else
                  li.nav-item
                    a.nav-link.nav-font(href='#', data-toggle='modal', data-target='#loginModal') LOGIN
                  li.nav-item.my-3(style='background:url(/images/vertical_bar.svg); width:5px;')
                  li.nav-item
                    a.nav-link.nav-font(href='#', data-toggle='modal', data-target='#joinModal') JOIN
                li.nav-item
                  a.nav-link.p-1(href='https://www.instagram.com/puzzlefootball_/', target='_blank')
                    img(src='/images/nav_top_1_insta.png', alt='퍼즐풋볼 인스타그램')
                li.nav-item
                  a.nav-link.p-1(href='https://www.youtube.com/channel/UCtEGfZDcQrsOuD1mpytufVg/featured?view_as=subscriber', target='_blank')
                    img(src='/images/nav_top_2_youtube.png', alt='퍼즐풋볼 유투브')
                li.nav-item
                  a.nav-link.p-1(href='https://pf.kakao.com/_nNxexaj', target='_blank')
                    img(src='/images/nav_top_3_pin.png', alt='퍼즐풋볼 카카오 채널')
                li.nav-item
                  a.nav-link.p-1(href='https://band.us/band/74014925', target='_blank')
                    img(src='/images/nav_top_4_band.png', alt='퍼즐풋볼 밴드')
                li.nav-item(style='line-height:28px;')
                  button#sidebarCollapse.btn.btn-link.p-1(href='#')
                    img(src='/images/nav_toggle.svg', width=22)
            input#isLoggedIn(type='hidden', data-isLogin=(user_info?'true':'false'))
