extends layout
block append_css
  link(rel="stylesheet", href="/public_css/main_modal.css")
  link(rel="stylesheet", href="/public_css/main_screen.css")
  link(rel="stylesheet", href="/public_css/main_league.css")
block content
  .full-cover-pzfutball
  .container.inner-container
    .main-tab-wrap.mb-2
      a.btn(href='/', class=active==='normal'?'active':'') 일반
      a.btn(href='/league', class=active==='league'?'active':'') 리그
      a.btn(href='/cup', class=active==='cup'?'active':'') 컵
    .main-slider
      .d-flex.justify-content-center
        .d-none.d-sm-block.main-slide-item(style='background-image:url(/images/normal_main.png)')
        .mobile_slide.w-100.d-block.d-sm-none(style='background:url(/images/normal_main.png)')
      .d-flex.justify-content-center
        .d-none.d-sm-block.main-slide-item(style='background-image:url(/images/league_main1.png)')
        .mobile_slide.w-100.d-block.d-sm-none(style='background:url(/images/league_main1.png)')
      .d-flex.justify-content-center
        .d-none.d-sm-block.main-slide-item(style='background:url(/images/league_main2.png)')
        .mobile_slide.w-100.d-block.d-sm-none(style='background:url(/images/league_main2.png)')
  .container
    hr
  .container.inner-container#season-wrap
    .row
      .col-md-8
        button.btn.active
          img(src='/images/match_male.png')
          span 2020 퍼즐-K 시즌1
        button.btn
          img(src='/images/match_female.png')
          span 2020 퍼즐-Q 시즌1
      .col-md-4.my-auto
        .search-league-wrap
          select.form-control
            option 지역
          select.form-control
            option 시즌 선택
  .container
    hr
  .container.inner-container
    #nav-tab.d-flex
      button.btn.btn-neutral.my-0.mx-2.p-0.active 일정 / 결과
      .vertical-line
      button.btn.btn-neutral.my-0.mx-2.p-0 기록 / 순위
  
    h5.text-center.mb-1 2020 PZ-K 시즌 1
    #round-wrap
      - var n = 0;
      while n < 20
        .mr-1
          button.btn #{++n}R
    .d-flex.justify-content-between#filter-wrap
      span(data-role='round-name') 1R
      .form-group.m-0
        button.btn.btn-neutral.dropdown-toggle 내 팀 일정만 보기
    #league-list-wrap
      .row
        div(data-col='date')
          h5 05.05(화)
        div(data-col='time')
          h6 19:00
          span 에이스 스타디움
        div(data-col='match-result')
          img(src='/images/pz_logo.png')
          .col-wrap
            span HOME
            h5 퍼즐FC
          .point-wrap
            span 6
            span :
            span 3
          .col-wrap
            span AWAY
            h5 호경FC
          img(src='/images/pz_logo.png')
        div(data-col='btn-detail')
          button.btn 경기기록 >
    .row
      .col.text-center
        button.btn(type='button', name='btnRanking') 순위표 바로 가기
  //  필터링 할 때 loading 이미지 띄우기
  #loadingPage.d-none
    .d-flex
      img(src='/nm/slick-slider/slick/ajax-loader.gif')
block append_js
  script(src='/public_js/league.js', type='text/javascript')
    