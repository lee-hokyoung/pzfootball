      .col-md-8
        form(onsubmit='return fnEditManager()')
          .card
            .card-header
              h5.title MY PROFILE
            .card-body
              .row
                .col-md-5
                  .form-group
                    label id (수정불가)
                    input.form-control(type="text", name='_id', value=manager_info._id, readonly)
                .col-md-3
                  .form-group
                    label 이름
                    input.form-control(type="text", name='manager_name', value=manager_info.manager_name)
                .col-md-4
                  .form-group
                    label(style='display:contents') 성별
                    .mt-2
                      .d-flex.justify-content-start
                        .form-check-radio
                          label.form-check-label(for='gender_1')
                            input#gender_1.form-check-input(type="radio", name="gender", value="1", checked=manager_info.gender==='1')
                            | 남성
                            span.form-check-sign
                        .form-check-radio.ml-3
                          label.form-check-label(for='gender_2')
                            input#gender_2.form-check-input(type="radio", name="gender", value="2", checked=manager_info.gender==='2')
                            | 여성
                            span.form-check-sign
              .row
                .col-md-4
                  .form-group
                    label 매니저 ID
                    input.form-control(type='text', name='manager_id', value=manager_info.manager_id, readonly)
                .col-md-4
                  .form-group
                    label 매니저 PW
                    input.form-control(type='password', name='manager_pw', value=manager_info.manager_pw)
                .col-md-2
                  .form-group
                    label 생년월일
                    input.form-control(type="text" name='birth', placeholder='ex) 901231', value=manager_info.birth)
                .col-md-2
                  .form-group
                    label 연락처
                    input.form-control(type="text" name='manager_phone', value=manager_info.manager_phone)
