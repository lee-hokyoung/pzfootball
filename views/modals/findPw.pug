#modalFindPw.modal.fade(tabindex="-1" role="dialog" aria-labelledby="findPwModalLabel" aria-hidden="true")
  .modal-dialog(style='max-width:350px')
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal')
          img(src='/images/icon-close.png')
        h6 비밀번호 찾기
      .modal-body
        #findId-wrap
          .form-group
            label 아이디
            input.form-control(name='user_id')
          .form-group
            label 이름
            input.form-control(name='user_name')
          .form-group
            label 휴대폰 번호
            .d-flex.justify-content-between
              input.form-control(type='tel', name='user_phone', value='010', maxlength='3')
              .mx-1.my-auto -
              input.form-control(type='tel', name='phone1', maxlength='4')
              .mx-1.my-auto -
              input.form-control(type='tel', name='phone2', maxlength='4')
        .text-center
          button.btn.btn-primary(role='button', onclick='fnResetPw()') 확인